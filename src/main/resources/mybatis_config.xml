<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<properties resource="jdbc.properties" />
	<settings>
		<!-- 카멜 케이스 VO 매핑 -->
		<setting name="mapUnderscoreToCamelCase" value="true" />
		<!-- 쿼리 결과 필드가 null인 경우, 누락이 되서 나오지 않게 설정 -->
		<setting name="callSettersOnNulls" value="true" />
		<!-- 쿼리에 보내는 파라미터가 null인 경우, 오류가 발생하는 것 방지 -->
		<setting name="jdbcTypeForNull" value="NULL" />
	</settings>
	
	<typeAliases>
		<package name="com.my.todoList.user.Users"/>
		<package name="com.my.todoList.task.Task"/>
		<package name="com.my.todoList.category.Category"/>
	</typeAliases>
	
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />

			<dataSource type="POOLED">
				<property name="driver" value="${jdbc.driverClassName}" />
				<property name="url" value="${jdbc.url}" />
				<property name="username" value="${jdbc.username}" />
				<property name="password" value="${jdbc.password}" />
			</dataSource>
		</environment>
	</environments>
	
	<mappers>
		<!-- XML 파일 매핑 -->
		<mapper resource="com/my/todoList/user/mapper/UserMapper.xml" />
		<mapper resource="com/my/todoList/task/mapper/TaskMapper.xml" />
		<mapper resource="com/my/todoList/category/mapper/CategoryMapper.xml" />
	</mappers>
	
</configuration>